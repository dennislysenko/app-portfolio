---
interface Hobby {
  text: string;
}

interface Props {
  hobbies?: Hobby[];
}

const { hobbies = [] } = Astro.props;
---

<section class="py-16 px-6 border-t border-[--color-border]">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold mb-8 text-[--color-text]">Off the Clock</h2>

    <ul class="space-y-4">
      {hobbies.map((hobby) => (
        <li class="text-[--color-text-muted] leading-relaxed">
          {hobby.text}
        </li>
      ))}
    </ul>
  </div>
</section>
