---
interface Hobby {
  text: string;
  icon: string;
}

interface Props {
  hobbies?: Hobby[];
}

const { hobbies = [] } = Astro.props;
---

<section class="py-20 px-6 border-t border-[--color-border]" style="background-color: var(--color-surface-elevated);">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold mb-8 text-[--color-text]">Off the Clock</h2>

    <ul class="space-y-5">
      {hobbies.map((hobby) => (
        <li class="flex items-start gap-4 text-[--color-text-muted] leading-relaxed">
          <span class="text-2xl">{hobby.icon}</span>
          <span>{hobby.text}</span>
        </li>
      ))}
    </ul>
  </div>
</section>
