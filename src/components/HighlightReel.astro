---
interface Highlight {
  stat: string;
  label: string;
}

interface Props {
  highlights?: Highlight[];
}

const { highlights = [] } = Astro.props;
---

<section class="py-20 px-6 border-y border-[--color-border]" style="background-color: var(--color-surface-elevated);">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold mb-10 text-[--color-text]">The Highlight Reel</h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
      {highlights.map((item) => (
        <div class="flex flex-col">
          <span class="text-2xl md:text-3xl font-bold text-[--color-accent]">{item.stat}</span>
          <span class="text-sm text-[--color-text-muted] leading-snug mt-1">{item.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>
