---
interface Props {
  title: string;
  slug: string;
  tagline?: string;
  description?: string;
  primaryColor: string;
  tag?: string;
  badge?: string;
  featuredScreenshot?: {
    src: string;
    alt: string;
  };
  screenshots?: {
    src: string;
    alt: string;
  }[];
  storeLinks?: {
    appStore?: string;
    playStore?: string;
  };
  reversed?: boolean;
}

const {
  title,
  slug,
  tagline,
  description,
  primaryColor,
  tag,
  badge,
  featuredScreenshot,
  screenshots,
  storeLinks,
  reversed = false
} = Astro.props;

// Use up to 3 screenshots for the display
const displayScreenshots = screenshots?.slice(0, 3) || [];
---

<section
  class="py-16 md:py-24 border-b border-[--color-border] last:border-b-0"
  style={`--accent: ${primaryColor}`}
>
  <div class="max-w-6xl mx-auto px-6">
    <div class={`flex flex-col ${reversed ? 'md:flex-row-reverse' : 'md:flex-row'} gap-8 md:gap-16 items-center`}>

      <!-- Screenshots Side -->
      <div class="w-full md:w-1/2">
        {featuredScreenshot ? (
          <div class="relative">
            <!-- Main featured image -->
            <div class="rounded-2xl overflow-hidden shadow-2xl shadow-[--accent]/20 border border-[--color-border]">
              <img
                src={featuredScreenshot.src}
                alt={featuredScreenshot.alt}
                class="w-full h-auto"
                loading="lazy"
              />
            </div>

            <!-- Floating accent elements -->
            <div class="absolute -z-10 -inset-4 bg-gradient-to-br from-[--accent]/20 to-transparent rounded-3xl blur-2xl"></div>
          </div>
        ) : displayScreenshots.length > 0 ? (
          <div class="relative flex gap-4 justify-center">
            {displayScreenshots.map((screenshot, i) => (
              <div
                class={`
                  w-32 md:w-40 rounded-2xl overflow-hidden shadow-xl border border-[--color-border]
                  ${i === 1 ? 'scale-110 z-10' : 'opacity-80'}
                `}
                style={`transform: ${i === 0 ? 'rotate(-6deg)' : i === 2 ? 'rotate(6deg)' : ''}`}
              >
                <img
                  src={screenshot.src}
                  alt={screenshot.alt}
                  class="w-full h-auto"
                  loading="lazy"
                />
              </div>
            ))}
            <div class="absolute -z-10 -inset-8 bg-gradient-to-br from-[--accent]/20 to-transparent rounded-3xl blur-2xl"></div>
          </div>
        ) : (
          <div class="aspect-[4/3] rounded-2xl bg-gradient-to-br from-[--accent]/30 to-[--accent]/5 flex items-center justify-center border border-[--color-border]">
            <span class="text-8xl opacity-30">ðŸ“±</span>
          </div>
        )}
      </div>

      <!-- Content Side -->
      <div class="w-full md:w-1/2">
        <h3 class="text-3xl md:text-4xl font-bold mb-3">{title}</h3>
        {badge && (
          <span class="inline-block text-xs font-semibold uppercase tracking-wide px-3 py-1.5 rounded-full mb-4" style="background-color: var(--color-primary); color: var(--color-surface);">
            {badge}
          </span>
        )}

        
        {description && (
          <p class="text-[--color-text-muted] mb-6 leading-relaxed">{description}</p>
        )}

        <!-- Store Links -->
        {storeLinks && (storeLinks.appStore || storeLinks.playStore) && (
          <div class="flex flex-wrap gap-3 mt-6">
            {storeLinks.appStore && (
              <a
                href={storeLinks.appStore}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-5 py-3 rounded-xl bg-[--color-surface-elevated] border border-[--color-border] hover:border-[--accent]/50 hover:bg-[--accent]/10 transition-all"
              >
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
                <span class="font-medium">App Store</span>
              </a>
            )}
            {storeLinks.playStore && (
              <a
                href={storeLinks.playStore}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-5 py-3 rounded-xl bg-[--color-surface-elevated] border border-[--color-border] hover:border-[--accent]/50 hover:bg-[--accent]/10 transition-all"
              >
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                </svg>
                <span class="font-medium">Play Store</span>
              </a>
            )}
          </div>
        )}
      </div>
    </div>
  </div>
</section>
